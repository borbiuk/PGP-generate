{
	"name": "pgp-generate",
	"version": "1.0.6-beta",
	"author": "Nazarii Borbiuk",
	"license": "MIT",
	"description": "Simple CLI tool to generate PGP keys pair",
	"keywords": [
		"cli",
		"encryption",
		"file",
		"generate",
		"pgp",
		"rsa"
	],
	"main": "index.js",
	"bin": {
		"pgp-generate": "index.js",
		"pgpg": "index.js"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/borbiuk/PGP-generate.git"
	},
	"homepage": "https://github.com/borbiuk/PGP-generate#readme",
	"scripts": {
		"build": "npx tsc index.ts",
		"publish": "npm run build && npm publish",
		"example:help": "node index.js --help",
		"example:print": "node index.js -n Developer -e dev@email.com -p mySecret",
		"example:file": "node index.js -n Developer -e dev@email.com -p mySecret -l 3 -f ./dist/test"
	},
	"dependencies": {
		"commander": "12.0.0",
		"openpgp": "5.11.1"
	},
	"devDependencies": {
		"@openpgp/web-stream-tools": "0.0.14",
		"@types/node": "20.11.27",
		"typescript": "5.4.2"
	}
}
